{
    "extends": "./tsconfig.json",
    "compilerOptions": {
      "outDir": "./dist/mjs",
      "module": "ESNext",
      "esModuleInterop": false,
      "allowSyntheticDefaultImports": true,
      "declaration": true,
      "declarationDir": "./types/mjs",
      "skipLibCheck": true,
      "strictNullChecks": true,
      "noImplicitAny": true,
      "noImplicitThis": true,
      "strict": true
    }
  }